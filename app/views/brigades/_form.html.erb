<%= form_for(@brigade, html: { class: 'basic-grey' }) do |f| %>
  <% if @brigade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@brigade.errors.count, "error") %> prohibited this brigade from being saved:</h2>

      <ul>
      <% @brigade.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% I18n.available_locales.each do |locale| %>
    <h2><%= locale.upcase %> translation:</h2>

    <div class="field">
      <%= f.label "name_#{locale}", 'Name' %><br>
      <%= f.text_field "name_#{locale}" %>
    </div>

    <div class="field">
      <%= f.label "description_#{locale}", 'Description' %><br>
      <%= f.text_area "description_#{locale}" %>
    </div>

    <hr />
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>